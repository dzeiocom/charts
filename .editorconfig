root = true

# Base Configuration
[*]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
end_of_line = lf

# Markdown Standards
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false


# Java/Kotlin Standards
[*.{java,kt,kts,gradle}]
indent_style = space
